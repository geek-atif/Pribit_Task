<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pribit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bold_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="light_med_text">
        <item name="android:textSize">@dimen/size_14</item>
    </style>

    <style name="light_text_small">
        <item name="android:textSize">@dimen/size_10</item>
    </style>

    <style name="light_text_med">
        <item name="android:textSize">@dimen/size_12</item>
    </style>

    <style name="light_text_med_white">
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="light_text_med_gry">
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:textColor">@color/gry</item>
    </style>

    <style name="light_med_gry">
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:textColor">@color/grytow</item>
    </style>

    <style name="blog_text_big">
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>